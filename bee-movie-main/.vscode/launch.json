{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Debug (debugpy)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "run.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-reload",
        "--no-debugger"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
